@model eCommerce.Models.Customer

<p><a href="/dashboard">Dashboard</a> | <a href="/products">Products</a> | <a href="/orders">Orders</a> | <a href="/customers">Customers</a></p>

<form action="/customers/new" method="POST">
    <label for="Name">Customer Name:</label>
    <input asp-for="Name" type="text" name="name" placeholder="Enter your name">
    @if(TempData["ExistingUser"] != null)
    {
        <li>@TempData["ExistingUser"]</li>
    }
    <input type="submit" value="Add customer">
</form><br><br>

<table class="table table-responsive">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Date Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in ViewBag.Customers)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.CreatedAt.ToString("D")</td>
                <td><a href="/customers/@customer.Id/remove">Remove</a></td>
            </tr>
        }
    </tbody>
</table>